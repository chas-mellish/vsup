parserOptions:
    sourceType: "module"
    ecmaVersion: 2015

env:
    browser: true
    node: true

extends:
    - "eslint:recommended"
    - "prettier"

plugins:
    - prettier

rules:
    "prettier/prettier": "error"
    no-cond-assign: 0
    no-fallthrough: ["error", { "commentPattern": "break omitted" }]
    quotes: ["error", "double"]
    comma-spacing: ["error", { "before": false, "after": true }]
    keyword-spacing: "error"
    space-infix-ops: 2
